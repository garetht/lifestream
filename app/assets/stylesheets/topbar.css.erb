.topbar{
  width: 960px;
  margin: auto;
}

.topbar-left{
  float: left;
  width: 192px;
  text-align: center;
}

.topbar-right{
  float: right;
  width: 768px;
  text-align: center;
}

.topbar-flash{
  float:left;
  padding: 20px 0px;
  font-family: "Source Sans Pro";
}

.topbar-message{
  padding: 5px 15px 5px 15px;
  border-radius: 4px;
  text-align: left;
}

.topbar-message.error-message{
  background: #C0392B;
  color: #E3ABAE;
}

.topbar-message.warning-message{
  background: #f1c40f;
}

.topbar-message.success-message{
  background: #27ae60;
  color: #4CEA8F;
}

.create-post-button, .new-category-button, .new-stream-button{
  float:right;
  padding: 30px 0px 20px 20px;
}

.create-category-field, .create-stream-field{
  float: right;
  padding: 5px 0px 20px 20px;
}
.category-form, .stream-form{
  float:right;
}

.input-field.category-input-field, .input-field.stream-input-field{
  min-width: 70px;
  padding-right: 0px
}

.input-label{
  display: block;
  text-align: left;
}