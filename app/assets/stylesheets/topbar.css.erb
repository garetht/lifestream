.topbar{
  width: 960px;
  margin: auto;
}

.topbar-left{
  float: left;
  width: 192px;
  text-align: center;
}

.topbar-right{
  float: right;
  width: 768px;
  text-align: center;
}

.topbar-flash{
  float:left;
  padding: 20px 0px;
  font-family: "Source Sans Pro";
}

.topbar-message{
  padding: 5px 15px 5px 15px;
  border-radius: 4px;
  text-align: left;
}

.topbar-message.error-message{
  background: #C0392B;
  color: #E3ABAE;
}

.topbar-message.warning-message{
  background: #f1c40f;
}

.topbar-message.success-message{
  background: #27ae60;
  color: #4CEA8F;
}

.create-post-button{
  float:right;
  padding: 20px 0px 20px 40px;
}