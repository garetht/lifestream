@font-face {
  font-family: 'Proxima Nova Light';
  src:url(<%= asset_path('ProximaNova-Light.eot') %>);
  src:url(<%= asset_path('ProximaNova-Light.eot?#iefix') %>) format('embedded-opentype'),
    url(<%= asset_path('ProximaNova-Light.svg#ProximaNova-Light') %>) format('svg'),
    url(<%= asset_path('ProximaNova-Light.woff') %>) format('woff'),
    url(<%= asset_path('ProximaNova-Light.ttf') %>) format('truetype');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'Proxima Nova Cond';
  src:url(<%= asset_path('ProximaNovaCond-Regular.eot') %>);
  src:url(<%= asset_path('ProximaNovaCond-Regular.eot?#iefix') %>) format('embedded-opentype'),
    url(<%= asset_path('ProximaNovaCond-Regular.svg#ProximaNovaCond-Regular') %>) format('svg'),
    url(<%= asset_path('ProximaNovaCond-Regular.woff') %>) format('woff'),
    url(<%= asset_path('ProximaNovaCond-Regular.ttf') %>) format('truetype');
  font-weight: normal;
  font-style: normal;
}
@font-face {
  font-family: 'Gotham';
  src:url(<%= asset_path('Gotham-Medium.eot') %>);
  src:url(<%= asset_path('Gotham-Medium.eot?#iefix') %>) format('embedded-opentype'),
    url(<%= asset_path('Gotham-Medium.svg#Gotham-Medium') %>) format('svg'),
    url(<%= asset_path('Gotham-Medium.woff') %>) format('woff'),
    url(<%= asset_path('Gotham-Medium.ttf') %>) format('truetype');
  font-weight: normal;
  font-style: normal;
}

body, nav, header, ul, li, label, input, h1, h2{
  margin: 0;
  padding: 0;
  border: 0;
}

h2{
  font-size: 12px;
}

li{
  list-style-type: none;
}

body{
  font-family: "Proxima Nova Light";
  font-smoothing: antialiased;
  background: rgb(230, 230, 230);
}

.clearfix:after{
  content: "";
  clear: both;
  display: table;
}

header.lifestream{
  height: 90px;
  background-image: -webkit-gradient(linear, 0 100%, 0 0, from(rgb(43, 43, 43)), to(rgb(50, 50, 50)));
  background-image: -webkit-linear-gradient(rgb(43, 43, 43), rgb(50, 50, 50));
  background-image: -moz-linear-gradient(rgb(43, 43, 43), rgb(50, 50, 50));
  background-image: -o-linear-gradient(rgb(43, 43, 43), rgb(50, 50, 50));
  background-image: linear-gradient(rgb(43, 43, 43), rgb(50, 50, 50));
}

header.lifestream .header-text{
  padding-top: 24px;
  font-size: 48px;
  text-align: center;
  color: #EAEAEA;
  letter-spacing: 10px;
}

nav{
  background-image: -webkit-gradient(linear, 0 100%, 0 0, from(rgb(64, 46, 17)), to(rgb(77, 51, 0)));
  background-image: -webkit-linear-gradient(rgb(64, 46, 17), rgb(77, 51, 0));
  background-image: -moz-linear-gradient(rgb(64, 46, 17), rgb(77, 51, 0));
  background-image: -o-linear-gradient(rgb(64, 46, 17), rgb(77, 51, 0));
  background-image: linear-gradient(rgb(64, 46, 17), rgb(77, 51, 0));
  background-color: #402E11;
  border-top: 1px solid #6B4700;
  height: 36px;
}

.navbar{
  float: left;
  padding-left: 23.5%;
}

.navbar ul li{
  float: left;
  list-style: none;
  padding: 10px 60px 10px 60px;
  -webkit-transition: all 0.3s;
  cursor: pointer;
}

.navbar ul li a{
  float: left;
  color: rgb(230, 230, 230);
  text-decoration: none;
}

.navbar ul li:hover{
  background-color: rgb(230, 230, 230);
  -webkit-transition: all 0.6s;
}

.navbar ul li:hover a{
  color: #402E11;
}

.container{
  width: 960px;
  margin: auto;
}

.leftnavbar{
  float: left;
  width: 192px;
  padding: 0px 0px 10px 0px;
}

.leftnavbar li{
  list-style-type: none;
  padding: 15px 40px 15px 10px;
  -webkit-transition: all 0.1s;
}

.leftnavbar li:hover{
  background: #555;
  color: #E6E6E6;
  -webkit-transition: all 0.1s;
}

.leftnavbar ul a{
  display: block;
  text-decoration: none;
  color: #402E11;
}

.leftnavbar ul a:hover{
  text-decoration: none;
  color: #E6E6E6;
}

.leftnavbar ul li:hover a:visited{
  text-decoration: none;
  color: #E6E6E6;
}

.rightbar{
  background-color: white;
  width: 768px;
  float: right;
  padding: 10px 0px 10px 0px;
  min-height: 400px;
}

.new{
  font-family: "calluna", serif;
  font-style: italic;
  font-weight: 700;
  font-size: 3em;
}

.postdot{
  font-family: "calluna", serif;
  font-style: italic;
  font-weight: 400;
  font-size: 3em;
}

.input-label{
  display: block;
  text-transform: uppercase;
  font-size: 14px;
  font-family: "Proxima Nova Cond";
  padding-bottom: 0px;
  padding-top: 10px;
  color: #666;
  border-radius: 5px;
}

.input-field{
  padding: 7px;
  min-width: 400px;
  font-size: 18px;
  outline: 0px;
  border: 0px;
}

.input-field.inverse{
  background-color: rgb(230, 230, 230)
}

.input-field:hover{
  background-color: #F6F6E4;
}

.input-field:focus{
  background-color: #ABC9E3;
}

.button{
  font-family: "Source Sans Pro";
  text-transform: uppercase;
  font-size: 14px;
  color: #EEEEEE;
  padding: 8px 15px;
  border-radius: 3px;
  border: 0;
  margin: 0;
}

.button:hover{
  cursor:pointer;
}

.blue-button.button{
  background-color: #478BC2;
}

.blue-button.button:hover{
  background-color: #8CB9D9;
}

.green-button.button{
  background-color: #27AE60;
}

.green-button.button:hover{
  background-color: #2ecc71;
}

.orange-button.button{
  background-color: #d35400;
}

.orange-button.button:hover{
  background-color: #e67e22;
}

.darkblue-button.button{
  background-color: #2c3e50;
}

.darkblue-button.button:hover{
  background-color: #34495e;
};